<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/negro"
    tools:context="v2.sierra.campitos.BlankFragmentMamifero2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imagenCascabel"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"

            android:src="@drawable/cascabel1" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="bottom"
            android:textColor="@drawable/white"
            android:text="Los cactus son bien bonitos, neta que si, ueno a mi me gustan mucho, ademas son bien mexicanos como el pozole"
            android:id="@+id/textView" />
    </FrameLayout>


</LinearLayout>
